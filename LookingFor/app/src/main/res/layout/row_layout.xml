<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="82dp">

    <ImageView
        android:id="@+id/eventPicture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/eventLocation"
        android:layout_alignParentStart="true"
        android:src="@drawable/baseball" />

    <TextView
        android:id="@+id/eventName"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Event Name:" />

    <TextView
        android:id="@+id/eventParticipants"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_alignStart="@+id/eventName"
        android:layout_below="@+id/eventName"
        android:text="Participants:" />

    <TextView
        android:id="@+id/eventDate"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_alignStart="@+id/eventParticipants"
        android:layout_below="@+id/eventParticipants"
        android:text="Date:" />

    <TextView
        android:id="@+id/eventTime"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_below="@+id/eventParticipants"
        android:layout_toEndOf="@+id/eventDate"
        android:text="Time:" />

    <TextView
        android:id="@+id/eventLocation"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_alignStart="@+id/eventDate"
        android:layout_below="@+id/eventDate"
        android:text="Location:" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"
        android:layout_below="@+id/eventLocation"
        android:id="@+id/view" />

</RelativeLayout>