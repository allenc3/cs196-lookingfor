<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    android:background="#d1e0e0">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="62dp"
        android:layout_height="36dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:gravity="left|center_vertical"
        android:text="Going:"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/locationLabel"
        android:layout_width="168dp"
        android:layout_height="23dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/round"
        android:gravity="center"
        android:text="Click to View Map"
        app:layout_constraintStart_toStartOf="@+id/dateTimeLabel"
        app:layout_constraintTop_toBottomOf="@+id/dateTimeLabel" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="68dp"
        android:layout_height="35dp"

        android:gravity="left|center_vertical"
        android:text="Location:"
        android:textColor="@android:color/black"
        app:layout_constraintBaseline_toBaselineOf="@+id/locationLabel"
        app:layout_constraintStart_toStartOf="@+id/textView4" />

    <ImageView
        android:id="@+id/hostAvatar"
        android:layout_width="80dp"
        android:layout_height="76dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:contentDescription="ownerAvatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />


    <LinearLayout
        android:id="@+id/attendeeAvatarList"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView3">

    </LinearLayout>

    <TextView
        android:id="@+id/dateTimeLabel"
        android:layout_width="168dp"
        android:layout_height="23dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/round"
        android:gravity="center"
        android:text="Date and Time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <TextView
        android:id="@+id/hostUserNameLabel"
        android:layout_width="99dp"
        android:layout_height="36dp"
        android:layout_alignStart="@+id/textView5"
        android:layout_centerVertical="true"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="HostName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hostAvatar" />

    <TextView
        android:id="@+id/titleLabel"
        android:layout_width="178dp"
        android:layout_height="23dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/round"
        android:gravity="center"
        android:text="Title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Tags:"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/titleLabel" />

    <TextView
        android:id="@+id/tagLabel"
        android:layout_width="168dp"
        android:layout_height="29dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/round"
        android:gravity="center"
        android:text="Tag1"
        app:layout_constraintBottom_toTopOf="@+id/dateTimeLabel"
        app:layout_constraintStart_toStartOf="@+id/dateTimeLabel" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="78dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Description:"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toStartOf="@+id/descriptionLabel"
        app:layout_constraintHorizontal_bias="0.357"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hostUserNameLabel" />

    <TextView
        android:id="@+id/descriptionLabel"
        android:layout_width="260dp"
        android:layout_height="80dp"
        android:layout_marginBottom="56dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_corner"
        android:gravity="center"
        android:text="Description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationLabel"
        app:layout_constraintVertical_bias="0.038" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="Event Name:"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/textView13"
        app:layout_constraintEnd_toStartOf="@+id/titleLabel"
        app:layout_constraintHorizontal_bias="0.565"
        app:layout_constraintStart_toEndOf="@+id/hostAvatar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:gravity="left|center_vertical"
        android:text="Time:"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toStartOf="@+id/dateTimeLabel"
        app:layout_constraintHorizontal_bias="0.236"
        app:layout_constraintStart_toEndOf="@+id/hostUserNameLabel"
        app:layout_constraintTop_toBottomOf="@+id/textView13"
        app:layout_constraintVertical_bias="0.071" />
</android.support.constraint.ConstraintLayout>